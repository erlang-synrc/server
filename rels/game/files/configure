#!/bin/bash

H=`hostname -f`
GAMEPORT=7999
GAMEHOST=$H
WEBSERVER=web
APPSERVER=app@$H
GAMESERVER=game
MNESIAINIT=""
SYNC=false
MQ_HOST=localhost
MQ_PORT=5672
MQ_USER=kakauser
MQ_PASS=paynet123
MQ_VHOST=/

while [ $# -gt 0 ]
do
    case $1 in
	-game)
	    GAMESERVER=$2;shift 2;;
	-app)
	    APPSERVER=$2;shift 2;;
	-game-port)
	    GAMEPORT=$2;shift 2;;
	-game-host)
	    GAMEHOST=$2;shift 2;;
	-web)
	    WEBSERVER=$2;shift 2;;
	-mnesia-init)
	    MNESIAINIT="true";shift;;
	-mq-host)
	    MQ_HOST=$2;shift 2;;
	-mq-port)
	    MQ_PORT=$2;shift 2;;
	-mq-user)
	    MQ_USER=$2;shift 2;;
	-mq-pass)
	    MQ_PASS=$2;shift 2;;
	-mq-vhost)
	    MQ_VHOST=$2;shift 2;;
	-sync)
	    SYNC=$2;shift 2;;
	*) break;;
    esac
done

if [ "$MNESIAINIT" == "" ]; then
    ./config -file app.config nsg_srv mnesia_init -atom local
else
    ./config -file app.config nsg_srv mnesia_init -atom default
fi

./config -file app.config nsm_db riak_srv_node -atom $GAMESERVER@$H
./config -file app.config nsg_srv game_srv_port -integer $GAMEPORT
./config -file app.config nsg_srv app_srv_node -atom $APPSERVER
./config -file app.config nsg_srv game_srv_node -atom $GAMESERVER@$H
./config -file app.config nsg_srv web_srv_node -atom $WEBSERVER@$H
./config -file app.config nsm_conn ip -list "\"$GAMEHOST\""
./config -file app.config nsm_db nodes -list [app@$H,game@$H,web@$H]
./config -file app.config nsm_mq amqp_host -list "\"$MQ_HOST\""
./config -file app.config nsm_mq amqp_port -integer $MQ_PORT
./config -file app.config nsm_mq amqp_user -list "\"$MQ_USER\""
./config -file app.config nsm_mq amqp_pass -list "\"$MQ_PASS\""
./config -file app.config nsm_mq amqp_vhost -list "\"$MQ_VHOST\""
./config -file app.config nsx_utils app_srv_node -atom $APPSERVER
./config -file app.config nsm_db sync_nodes -atom $SYNC

cat vm.args.template | sed "s#GAMESERVER_NODE#$GAMESERVER@$H#g" > vm.args
