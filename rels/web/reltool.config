{sys, [
       {lib_dirs, ["../../apps","../../deps"]},
       {rel, "ns_node", "1",
        [
         appmon,
         gproc,
         gen_leader,
         nsw_srv,
         nsx_utils,
         nsx_config,
         kernel,
         mochiweb,
         nitrogen_core,
         stdlib,
         rabbit_common,
         amqp_client,
         sasl
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "ns_node"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, ["^ebin$",
                               "^include$",
                               "^priv$"
                              ]},
       {app, sasl, [{incl_cond, include}]},
       {app, riak_kv, [{incl_cond, exclude}]},
       {app, riak_core, [{incl_cond, exclude}]},
       {app, nsm_db, [{incl_cond, exclude}]},
       {app, nsm_srv, [{incl_cond, exclude}]},
       {app, mochiweb, [{incl_cond, include}
%            {mod, mochiglobal, [{incl_cond, exclude}]},
%            {mod, mochijson2,  [{incl_cond, exclude}]}
    		]},
       {app, hipe, [{incl_cond, exclude}]}
      ]}.

{target_dir, "node"}.
{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
           {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
           {copy, "files/config", "etc/config"},
           {copy, "files/configure", "etc/configure"},
           {copy, "files/ns_node", "bin/ns_node"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args.template", "etc/vm.args.template"}
           ]}.

