{sys, [
    {lib_dirs, ["../../apps","../../deps","/mnt/glusterfs/apps/riak_bin"]},
    {rel, "ns_node", "1",[
        kernel, stdlib, sasl, appmon, mnesia, cowboy, gproc, gen_leader, nsm_mq, lager,
        mimetypes, nsx_utils, nsx_config, nsp_srv, sync, nitrogen_core, nsm_db, rabbit_common,
        amqp_client, crypto, tools, os_mon, nsx_mibs, otp_mibs, snmp
    ]},
    {rel, "start_clean", "", [ kernel, stdlib ]},
    {boot_rel, "ns_node"},
    {profile, embedded},
    {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)"]},
    {excl_archive_filters, ["^ebin$", "^include$", "^priv$" ]},
    {app, nsm_srv, [{incl_cond, exclude}]},
    {app, nsg_srv, [{incl_cond, exclude}]},
    {app, nsg_session, [{incl_cond, exclude}]},
    {app, nsm_bg, [{incl_cond, exclude}]},
    {app, nsw_srv, [{incl_cond, exclude}]},
    {app, nsm_conn, [{incl_cond, exclude}]},
    {app, nsg_games, [{incl_cond, include}]},
    {app, hipe, [{incl_cond, exclude}]} ]}.

{target_dir, "node"}.
{overlay, [
    {mkdir, "log/sasl"},
    {mkdir, "etc/snmp/agent/db"},
    {copy, "files/erl", "{{erts_vsn}}/bin/erl"},
    {copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
    {copy, "files/config", "etc/config"},
    {copy, "files/configure", "etc/configure"},
    {copy, "files/ns_node", "bin/ns_node"},
    {copy, "files/app.config", "etc/app.config"},
    {copy, "files/vm.args.template", "etc/vm.args.template"},
    {copy, "files/snmp/agent", "etc/snmp"}
]}.
